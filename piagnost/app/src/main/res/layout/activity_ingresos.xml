<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ingresos">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="53dp"
        android:text="Ingreso de Armas y Armaduras"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cod"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:hint="Ingrese Codigo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:hint="Ingrese nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="606dp"
        android:layout_marginEnd="224dp"
        android:onClick="Registrar"
        android:text="Aceptar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:layout_marginStart="227dp"
        android:layout_marginTop="606dp"
        android:layout_marginEnd="36dp"
        android:onClick="Regresar"
        android:text="Regresar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="353dp"
        android:layout_height="41dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="145dp"
        android:layout_height="273dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="226dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rareza" />

        <RadioButton
            android:id="@+id/com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comun" />

        <RadioButton
            android:id="@+id/rad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raro" />

        <RadioButton
            android:id="@+id/epi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Epico" />

        <RadioButton
            android:id="@+id/mit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mitico" />

        <RadioButton
            android:id="@+id/leg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Legendario" />
    </RadioGroup>

    <RadioGroup
        android:layout_width="153dp"
        android:layout_height="270dp"
        android:layout_marginStart="227dp"
        android:layout_marginTop="297dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caracteristicas" />

        <CheckBox
            android:id="@+id/enca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encantado" />

        <CheckBox
            android:id="@+id/ben"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bendecido" />

        <CheckBox
            android:id="@+id/mal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maldecido" />

        <CheckBox
            android:id="@+id/dan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
